<plugin>
    <groupId>org.wildfly.swarm</groupId>
    <artifactId>wildfly-swarm-plugin</artifactId>
    <version>1.0.0.Final</version>
    <configuration>
        <properties>
            <swarm.context.path>${build.finalName}</swarm.context.path>
        </properties>
        <jvmArguments>
            <jvmArgument>-Xmx128m</jvmArgument>
        </jvmArguments>
    </configuration>
    <executions>
        <execution>
            <goals>
                <goal>package</goal>
            </goals>
        </execution>
    </executions>
</plugin>
